<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="9dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jemput" />

    <EditText
        android:layout_width="278dp"
        android:layout_height="56dp"
        android:hint="Masukkan lokasi"
        android:id="@+id/input_lokasi"
        android:layout_below="@+id/textView2"/>



    <ImageView
        android:id="@+id/image_sampah"
        android:layout_width="195dp"
        android:layout_height="136dp"
        android:background="@color/colorlatar"
        android:layout_below="@+id/input_lokasi"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/tambah_gambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahkan gambar"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="462dp"
        android:layout_below="@+id/image_sampah"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tambah_gambar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorbotton"
        android:text="Kirim"
        android:textColor="@color/colortext" />
</RelativeLayout>