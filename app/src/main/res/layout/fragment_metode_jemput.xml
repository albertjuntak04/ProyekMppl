<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="9dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jemput" />

    <EditText
        android:layout_width="278dp"
        android:layout_height="56dp"
        android:hint="Masukkan lokasi"
        android:id="@+id/input_lokasi"
        android:layout_below="@+id/textView2"/>



    <ImageButton
        android:id="@+id/image_sampah"
        android:layout_width="195dp"
        android:layout_height="136dp"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
        android:layout_below="@+id/input_lokasi"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahkan gambar"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="462dp"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/image_sampah"/>

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:background="@color/colorbotton"
        android:textColor="@color/colortext"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>