<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.KantongActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_sampah"
            tools:itemCount="5"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp">
        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:indeterminateDrawable="@drawable/custom_progressbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"></ProgressBar>

        <LinearLayout
            android:id="@+id/kantongawal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycleview"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_metode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metode"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_metode">
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="?android:attr/windowBackground"
                    android:foreground="?attr/selectableItemBackground"
                    app:menu="@menu/metode_navigation" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <include layout="@layout/content_dashboard" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

