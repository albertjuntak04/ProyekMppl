<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/gambar"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="6dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="10dp"
            android:id="@+id/img_profile"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/img_profile"
            android:id="@+id/poin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="36dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/ic_redeem_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/poinku"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_monetization_on_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kuponku"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/keluar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:background="@color/hijaubutton"
            android:text="Keluar"
            android:textColor="@color/colortext"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/profile"
        android:layout_margin="10dp"
        android:paddingTop="30dp"
        android:id="@+id/edit_profile">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_nama"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:text="Nama:"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="163dp"
                    tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/btn_edit_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:ems="10"
                android:text="Email:"
                android:inputType="textEmailAddress" />
            <ImageButton
                android:id="@+id/btn_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/edit_noHp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:text="No.Hp"
                    tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/btn_edit_noHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pekerjaan"
                android:ems="10"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:ems="10"
                android:text="Kata sandi"
                android:inputType="textPassword" />
            <ImageButton
                android:id="@+id/btn_edit_sandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="237dp"
        android:layout_height="35dp"
        android:text="Simpan"
        android:background="@color/colorbotton"
        android:textColor="@color/colortext"
        android:layout_below="@+id/edit_profile"
         android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>