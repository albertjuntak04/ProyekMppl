<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/gambar"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="6dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="10dp"
            android:id="@+id/img_profile"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/img_profile"
            android:id="@+id/poin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/poinku"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="36dp"
                       android:layout_height="28dp"
                       app:srcCompat="@drawable/savemoney" />
                   <TextView
                       android:id="@+id/my_poin"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textSize="20dp"
                       android:layout_marginLeft="8dp"/>
               </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kuponku"
                    android:textSize="20dp"
                    android:layout_marginLeft="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="28dp"
                        app:srcCompat="@drawable/coupon" />
                    <TextView
                        android:id="@+id/my_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/keluar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/btn_keluar"
            android:text="Keluar"
            android:textColor="@color/colortext"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/profile"
        android:layout_margin="10dp"
        android:paddingTop="30dp"
        android:id="@+id/edit_profile">
        <TextView
            android:id="@+id/judulNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama :"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edit_nama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="163dp"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/btn_edit_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/judulEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="163dp"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/btn_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/judlNoHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. HP :"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edit_noHp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="163dp"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/btn_edit_noHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/judlPekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pekerjaan :"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pekerjaan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="163dp"
                tools:ignore="MissingConstraints"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/judlJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin :"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jenis_kelamin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="163dp"
                tools:ignore="MissingConstraints"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/judlPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password :"
            android:ems="10"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edit_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="163dp"
                tools:ignore="MissingConstraints" />
            <ImageButton
                android:id="@+id/btn_edit_sandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colortext"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="237dp"
        android:layout_height="40dp"
        android:text="Simpan"
        android:background="@drawable/btn_login"
        android:textColor="@color/colortext"
        android:layout_below="@+id/edit_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>